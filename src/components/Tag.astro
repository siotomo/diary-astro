---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;
---

{href ? (
  <a
    href={href}
    class="inline-block rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-700 hover:bg-blue-200 transition-colors"
  >
    #{tag}
  </a>
) : (
  <span class="inline-block rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-700">
    #{tag}
  </span>
)}
