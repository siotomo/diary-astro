---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'シンプルな個人日記ブログ' } = Astro.props;
const siteTitle = 'diary-astro';
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {siteTitle}</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <header class="border-b border-gray-200 bg-white">
      <div class="mx-auto max-w-3xl px-4 py-6">
        <a href="/" class="text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
          {siteTitle}
        </a>
      </div>
    </header>

    <main class="mx-auto max-w-3xl px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-gray-200 bg-white mt-auto">
      <div class="mx-auto max-w-3xl px-4 py-6 text-center text-sm text-gray-500">
        &copy; {new Date().getFullYear()} {siteTitle}
      </div>
    </footer>
  </body>
</html>
